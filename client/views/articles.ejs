<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Danh sách bài báo</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans">
  <div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-6 text-center">Danh sách bài báo</h1>

    <!-- Error Message -->
    <% if (typeof error !== 'undefined') { %>
      <div class="bg-red-100 text-red-700 p-4 rounded mb-4">
        <%= error %>
      </div>
    <% } %>

    <!-- Navigation -->
    <div class="mb-6">
      <a href="/" class="text-blue-500 hover:underline">Quản lý từ khóa</a>
    </div>

    <!-- Keyword Selector Form -->
    <form action="/articles" method="GET" class="mb-6">
      <select name="keyword" class="border p-2 rounded" onchange="this.form.submit()">
        <option value="">Chọn từ khóa</option>
        <% keywords.forEach(k => { %>
          <option value="<%= k %>" <%= k === keyword ? 'selected' : '' %>><%= k %></option>
        <% }) %>
      </select>
    </form>

    <!-- Buttons -->
    <% if (keyword) { %>
      <div class="flex space-x-4 mb-6">
        <form action="/start-crawl" method="POST">
          <input type="hidden" name="keyword" value="<%= keyword %>">
          <button type="submit" class="bg-green-500 text-white p-2 rounded hover:bg-green-600">Cập nhật bài báo mới</button>
        </form>
        <form action="/articles" method="GET">
          <input type="hidden" name="keyword" value="<%= keyword %>">
          <button type="submit" class="bg-blue-500 text-white p-2 rounded hover:bg-blue-600">Refresh</button>
        </form>
      </div>
    <% } %>

    <!-- Articles List -->
    <div class="bg-white p-4 rounded shadow">
      <h2 class="text-xl font-semibold mb-4">Bài báo <%= keyword ? `cho từ khóa "${keyword}"` : '' %></h2>
      <% if (articles.length === 0) { %>
        <p class="text-gray-500">Chưa có bài báo nào.</p>
      <% } else { %>
        <ul class="space-y-4">
          <% articles.forEach(article => { %>
            <li class="p-4 bg-gray-50 rounded">
              <h3 class="text-lg font-semibold">
                <a href="<%= article.link %>" target="_blank" class="text-blue-500 hover:underline"><%= article.title %></a>
              </h3>
              <p class="text-gray-600"><strong>Nguồn:</strong> <%= article.source %></p>
              <p class="text-gray-600"><strong>Ngày đăng:</strong> <%= article.pub_date %></p>
              <p class="text-gray-600"><strong>Mô tả:</strong> <%= article.description || 'Không có mô tả' %></p>
              <p class="text-gray-600"><strong>Tóm tắt:</strong> <%= article.summary || 'Chưa có tóm tắt' %></p>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </div>
  </div>
</body>
</html>